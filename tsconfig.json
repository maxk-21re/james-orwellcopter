{
    "compilerOptions": {
      "sourceMap": true,
      "inlineSourceMap": false,
      "target": "es5",
      "module": "es2015",
      "moduleResolution": "node",
      "jsx": "react",
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "skipLibCheck": true,
      "alwaysStrict": true
    },
    "include": [
        "./src/**/*"
    ],
  "exclude": [
    "node_modules"
  ]
}
